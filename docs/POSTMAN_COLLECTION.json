{
  "info": {
    "name": "Multilingual Mandi API",
    "description": "Complete API collection for the Multilingual Mandi platform - Agricultural trading platform with voice-based interactions in local languages",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "listing_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "negotiation_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+919876543210\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/send-otp",
              "host": ["{{base_url}}"],
              "path": ["auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', jsonData.token);",
                  "    pm.collectionVariables.set('user_id', jsonData.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+919876543210\",\n  \"otp\": \"123456\",\n  \"role\": \"vendor\",\n  \"languagePreference\": \"hi\",\n  \"name\": \"Ramesh Kumar\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-otp"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ramesh Kumar Singh\",\n  \"languagePreference\": \"mr\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Listings",
      "item": [
        {
          "name": "Search Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/listings/search?cropType=tomato&qualityTier=premium",
              "host": ["{{base_url}}"],
              "path": ["listings", "search"],
              "query": [
                {
                  "key": "cropType",
                  "value": "tomato"
                },
                {
                  "key": "qualityTier",
                  "value": "premium"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Listing",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/listings/{{listing_id}}",
              "host": ["{{base_url}}"],
              "path": ["listings", "{{listing_id}}"]
            }
          }
        },
        {
          "name": "Create Listing",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('listing_id', jsonData.listing.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cropType\": \"tomato\",\n  \"quantity\": 100,\n  \"unit\": \"kg\",\n  \"basePrice\": 25.00,\n  \"qualityTier\": \"premium\",\n  \"description\": \"Fresh organic tomatoes\",\n  \"images\": [\"/images/crops/tomato.jpg\"],\n  \"location\": {\n    \"latitude\": 19.9975,\n    \"longitude\": 73.7898,\n    \"address\": \"Nashik, Maharashtra\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/listings",
              "host": ["{{base_url}}"],
              "path": ["listings"]
            }
          }
        },
        {
          "name": "Update Listing",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 80,\n  \"basePrice\": 28.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/listings/{{listing_id}}",
              "host": ["{{base_url}}"],
              "path": ["listings", "{{listing_id}}"]
            }
          }
        },
        {
          "name": "Delete Listing",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/listings/{{listing_id}}",
              "host": ["{{base_url}}"],
              "path": ["listings", "{{listing_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Negotiations",
      "item": [
        {
          "name": "Create Negotiation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('negotiation_id', jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"listingId\": \"{{listing_id}}\",\n  \"initialOfferPrice\": 28.00,\n  \"message\": \"Can you accept â‚¹28 per kg?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/negotiations",
              "host": ["{{base_url}}"],
              "path": ["negotiations"]
            }
          }
        }
      ]
    }
  ]
}
