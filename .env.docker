# Docker Compose Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
NODE_ENV=production
# Options: development, production

# ============================================
# PORT CONFIGURATION
# ============================================
BACKEND_PORT=5000
FRONTEND_PORT=80
POSTGRES_PORT=5432

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For SQLite (MVP/Development)
DATABASE_URL=sqlite:/app/data/mandi.db

# For PostgreSQL (Production) - Uncomment and configure
# DATABASE_URL=postgresql://mandi_user:your-password@db:5432/mandi
POSTGRES_DB=mandi
POSTGRES_USER=mandi_user
POSTGRES_PASSWORD=change-this-password-in-production

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# ============================================
# EXTERNAL API KEYS
# ============================================

# SARVAM AI (Speech-to-Text, Text-to-Speech, Translation)
SARVAM_API_KEY=your-sarvam-api-key-here
SARVAM_API_URL=https://api.sarvam.ai

# BHASHINI (Government Multilingual API - Future)
BHASHINI_API_KEY=your-bhashini-api-key-here
BHASHINI_API_URL=https://api.bhashini.gov.in

# OpenRouter AI (Intent Extraction, NLP)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# eNAM API (Market Prices - Mocked in MVP)
ENAM_API_KEY=your-enam-api-key-here
ENAM_API_URL=https://api.enam.gov.in

# ============================================
# SMS/OTP CONFIGURATION
# ============================================
SMS_PROVIDER=mock
# Options: mock, twilio

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# LINGUISTIC PROVIDER
# ============================================
LINGUISTIC_PROVIDER=sarvam
# Options: sarvam, bhashini, google

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:80
VITE_API_URL=http://localhost:5000

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:80
# For multiple origins, use comma-separated values:
# CORS_ORIGIN=http://localhost:80,http://localhost:3000,https://yourdomain.com

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
# 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_VOICE_INTERFACE=true
ENABLE_AI_NEGOTIATION=true
ENABLE_ENAM_INTEGRATION=true
ENABLE_BLOCKCHAIN=false
ENABLE_WEATHER_API=false

# ============================================
# PRODUCTION OPTIMIZATIONS
# ============================================
# Uncomment for production
# NODE_OPTIONS=--max-old-space-size=2048
# COMPRESSION_ENABLED=true
# CACHE_TTL=3600
